{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "noEmit": true,
    "composite": true,
    "baseUrl": ".",
    "lib": ["DOM", "ESNext"],
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",

    "paths": {
      "@/*": ["./src/*"],
      "@hls-app/sdk": ["../../packages/sdk"]
    }
  },
  "references": [{ "path": "../../packages/sdk" }]
}
